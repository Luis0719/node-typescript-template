{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "removeComments": true,
    "sourceMap": false,
    "types": ["node", "jest"],
    "strict": false,
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["./**/*", "./**/*.json"],
  "exclude": ["node_modules", "tsconfig.json", "jest.config.ts"]
}
